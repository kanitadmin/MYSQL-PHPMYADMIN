[mysqld]
character-set-server = utf8mb4
collation-server = utf8mb4_general_ci

max_connections=500
sort_buffer_size=2M
read_buffer_size=1M
read_rnd_buffer_size=1M
join_buffer_size=1M
thread_stack=1M
innodb_buffer_pool_size=10G
innodb_log_buffer_size=1G
innodb_file_per_table=1
innodb_flush_log_at_trx_commit=2
